CREATE TABLE MEMBER(
	ID VARCHAR2(30) CONSTRAINT PK_ID PRIMARY KEY,
	PASSWORD VARCHAR2(30),
	NAME VARCHAR2(30),
	EMAIL VARCHAR2(30),
	AUTH NUMBER
);

CREATE TABLE COFFEE_ORDER(
	ID VARCHAR2(30),
	ESPRESSO_BEVERAGES VARCHAR2(50),
	ORDERED_DATE DATE,
	SYRUP NUMBER,
	COFFEE_SIZE NUMBER,
	ADD_SHOT NUMBER,
	WHIPPING_CREAM NUMBER,
	COFFEE_AMOUNT NUMBER,
	TOTAL_PRICE NUMBER,
	CONSTRAINT FK_ID FOREIGN KEY(ID)
		REFERENCES MEMBER(ID)
);





DROP TABLE COFFEE_ORDER
CASCADE CONSTRAINTS;